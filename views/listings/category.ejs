<% layout("layouts/boilerplate") -%>

<div class="row justify-start" id="indexContainer">
    <% for(let listing of allListings) {%>
        <% if(listing.category === category) { %>
            <div class="listing-card card mt-5 col-lg-4 col-md-6 col-sm-10">
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <b><p class="card-title"><%= listing.title %></p></b>
                        <%= listing.price.toLocaleString("in-IN")  %>&#8360;/Night
                        <i class="tax-info">&nbsp; &nbsp; +18% KDV</i>
                    </div>
                </a>
            </div>
        <% } %>
    <%}%>
</div>