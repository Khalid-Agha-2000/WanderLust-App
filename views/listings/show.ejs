<% layout("layouts/boilerplate") -%>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3 class="mt-4">Listing Details: </h3>
    </div>
    <div class="card col-6 offset-2">
        <div class="card w-100" style="width: 18rem;">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
            <div class="card-body">
                <b><p class="card-text"><%= listing.title %></b><br>
                    <%= listing.description %><br>
                    &#8360;: <%= listing.price.toLocaleString("in-IN") %><br>
                    <%= listing.location %>
                    <%= listing.country %>
                </p>

            </div>
        </div>
        <br>
        <div class="col-1 btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit">Edit</a><br>
            <form action="/listings/<%= listing.id %>?_method=DELETE" method="POST">
                <button class="btn btn-dark offset-1 delete">Delete</button>
            </form>
        </div>
        
    </div>
</div>