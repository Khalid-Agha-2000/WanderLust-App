<% if(success && success.length) { %>
<div class="alert alert-success mt-3 alert-dismissible fade show col-6 offset-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(deleted[0]) { %>
<div class="alert alert-warning mt-3 alert-dismissible fade show col-6 offset-3" role="alert">
    <%= deleted %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<% if(error[0]) { %>
<div class="alert alert-danger mt-3 alert-dismissible fade show col-6 offset-3" role="alert">
    <%= error[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>